<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="mensaje">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="origen" minOccurs="0" maxOccurs="unbounded">
            <xs:complexType>
            <xs:sequence>
                <xs:element name="nombre" minOccurs="0" maxOccurs="unbounded"/>
                <xs:element name="ciudad" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
            </xs:complexType>
            </xs:element>
        <xs:element name="destino" minOccurs="0" maxOccurs="unbounded">
                <xs:complexType>
                <xs:sequence>
                  <xs:element name="nombre" minOccurs="0" maxOccurs="unbounded"/>
                  <xs:element name="ciudad" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
          </xs:complexType>
          </xs:element>
              <xs:element name="asunto" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
              </xs:sequence>
      </xs:complexType>
  </xs:element>
</xs:schema>
